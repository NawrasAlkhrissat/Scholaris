<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Attendance | <%= studentAttendance.length> 0 ? studentAttendance[0].student.name : 'Student' %></title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/studentAttendance.css">
</head>

<body>
    <%- include('./partials/nav.ejs') %>


        <div class="dashboard-container">

            <aside class="sidebar">
                <div class="sidebar-title">Main Menu</div>
                <a href="/school/user/<%= userId %>" class="sidebar-link active"><span>üë§</span><span>My
                        Profile</span></a>
                <a href="/school" class="sidebar-link"><span>üè´</span><span>My School</span></a>
                <a href="/school/subject" class="sidebar-link"><span>üìö</span><span>
                        <%= role=='admin' ? 'All Subjects' : 'My Subjects' %>
                    </span></a>
                <a href="/school/academic-calendar" class="sidebar-link"><span>üìÖ</span><span>Calendar</span></a>
            </aside>

            <main class="main-content">

                <% let presentCount=0; let absentCount=0; let lateCount=0; let excusedCount=0;
                    studentAttendance.forEach(record=> {
                    if(record.status === 'present') presentCount++;
                    else if(record.status === 'absent') absentCount++;
                    else if(record.status === 'late') lateCount++;
                    else if(record.status === 'excused') excusedCount++;
                    });
                    %>

                    <a href="/school/student/<%= student._id %>" class="back-link">
                        <span>&larr;</span> Back to Profile
                    </a>

                    <header class="page-header">
                        <div class="header-title">
                            <h1>Attendance Log</h1>
                                <p>Tracking records for <strong>
                                        <%= student.name %>
                                    </strong></p>
                        </div>
                    </header>
                    <div class="stats-grid">
                        <div class="stat-card stat-present">
                            <div class="stat-icon">‚úÖ</div>
                            <div class="stat-info">
                                <h3>
                                    <%= presentCount %>
                                </h3>
                                <p>Total Present</p>
                            </div>
                        </div>

                        <div class="stat-card stat-absent">
                            <div class="stat-icon">‚ùå</div>
                            <div class="stat-info">
                                <h3>
                                    <%= absentCount %>
                                </h3>
                                <p>Total Absent</p>
                            </div>
                        </div>

                        <div class="stat-card stat-late">
                            <div class="stat-icon">‚ö†Ô∏è</div>
                            <div class="stat-info">
                                <h3>
                                    <%= lateCount %>
                                </h3>
                                <p>Total Late</p>
                            </div>
                        </div>
                        <div class="stat-card stat-excused">
                            <div class="stat-icon">üö´</div>
                            <div class="stat-info">
                                <h3>
                                    <%= excusedCount %>
                                </h3>
                                <p>Total Excused</p>
                            </div>
                        </div>
                    </div>

                    <div class="table-container">
                        <% if (studentAttendance.length> 0 ) { %>
                            <table class="attendance-table">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Subject</th>
                                        <th>Status</th>
                                        <th>Recorded By</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% studentAttendance.forEach((record)=> { %>
                                        <% if(record.status==="not taken" ) { return; } %>

                                            <tr id="row-<%= record._id %>">
                                                <td class="date-col">
                                                    <%= new Date(record.date).toLocaleDateString('en-GB', {
                                                        weekday: 'short' , year: 'numeric' , month: 'short' ,
                                                        day: 'numeric' }) %>
                                                </td>

                                                <td class="subject-col">
                                                    <%= record.subject.subjectName %>
                                                </td>

                                                <td class="status-cell">
                                                    <span id="badge-<%= record._id %>"
                                                        class="status-badge status-<%= record.status %> clickable"
                                                        <% if(role === 'admin' ||record.recordedBy._id.equals(userId)){ %>
                                                        onclick="enableEditMode('<%= record._id %>')"
                                                        <% } %>
                                                        title="Click to edit">
                                                        <%= record.status %>
                                                    </span>

                                                    <form id="form-update-<%= record._id %>"
                                                        action="/teacher/attendance/status/<%= record._id %>?_method=PUT"
                                                        method="POST" class="hidden">
                                                        <select name="status" class="status-select">
                                                            <% const statuses=['present', 'absent' , 'late' , 'excused'
                                                                ]; %>
                                                                <% statuses.forEach(s=> { %>
                                                                    <option value="<%= s %>" <%=record.status===s
                                                                        ? 'selected' : '' %>>
                                                                        <%= s.charAt(0).toUpperCase() + s.slice(1) %>
                                                                    </option>
                                                                    <% }) %>
                                                        </select>
                                                    </form>
                                                </td>

                                                <td>
                                                    <div class="teacher-info">
                                                        <span>üë®‚Äçüè´</span>
                                                        <%= record.recordedBy.firstName %>
                                                            <%= record.recordedBy.lastName %>
                                                    </div>
                                                </td>
                                                <% if(role === 'admin' || record.recordedBy._id.equals(userId)) { %>
                                                <td class="actions-col">
                                                    <form id="form-delete-<%= record._id %>"
                                                        action="/teacher/attendance/<%= record._id %>?_method=DELETE"
                                                        method="post">
                                                        <button type="submit" class="btn-delete">Delete</button>
                                                    </form>
                                                    <button id="btn-save-<%= record._id %>" class="btn-save hidden"
                                                        onclick="submitUpdateForm('<%= record._id %>')">
                                                        Save
                                                    </button>
                                                </td>
                                                <% } %>
                                            </tr>
                                            <% }) %>
                                </tbody>
                            </table>
                            <% } else { %>
                                <div style="text-align: center; padding: 40px; color: #999;">
                                    <p>No attendance records found for this student.</p>
                                </div>
                                <% } %>
                    </div>

            </main>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        <script>
            function enableEditMode(recordId) {
                document.getElementById(`badge-${recordId}`).classList.add('hidden');
                document.getElementById(`form-update-${recordId}`).classList.remove('hidden');
                document.getElementById(`form-delete-${recordId}`).classList.add('hidden');
                document.getElementById(`btn-save-${recordId}`).classList.remove('hidden');
            }

            function submitUpdateForm(recordId) {
                document.getElementById(`form-update-${recordId}`).submit();
            }
        </script>
        <% if(action && action.includes('attendanceDeleted')){%>
            <script>
                const Toast = Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000,
                    timerProgressBar: true,
                    didOpen: (toast) => {
                        toast.addEventListener('mouseenter', Swal.stopTimer)
                        toast.addEventListener('mouseleave', Swal.resumeTimer)
                    }
                })
                Toast.fire({
                    icon: 'success',
                    title: 'Attendance Record Deleted Successfully'
                })    
            </script>
            <%} %>

</body>

</html>